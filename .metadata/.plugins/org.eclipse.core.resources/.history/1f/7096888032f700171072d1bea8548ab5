package semester1Project;
import java.util.*;

public class ChatBot {
	public String findReply (String userInput){
		int words = 0;
		Random generator = new Random();
		String reply = "";
		//run switch
		 
		Scanner scannerString = new Scanner(userInput);
		//count words
		while (scannerString.hasNext()){
			scannerString.next();
			words++;
		}
		Scanner scannerString2 = new Scanner(userInput);

		String [] wordsArray = new String[words];
		for (int i = 0; i < words; i++){
			wordsArray[i] = scannerString2.next();
			wordsArray[i] = wordsArray[i].toLowerCase();
		}
		//for each word check if it matches a keyword
		//I like zeek = why do you like Zeek
		//I want food = Would you really be happy if you had food
		//sister, brother, mother, father = Tell me more about your family
		//cat dog = tell me more about your pets 
		//no, I'm, hate, I hate , because ,yes, happy, sad, mad, thank you
		int elementNum = 0;
		boolean cont = false;
		int randomizedNum = 0;
		for (String element: wordsArray){
			switch (element){
			case "hi" : 
			case "hello":
			case "hey":
				randomizedNum = generator.nextInt(3);
				String[] greetingResponses = {"How are you?", "What's up?", "How's it going?"};
				reply = greetingResponses[randomizedNum];
				cont = true;
				break;
			case "the":
				if (elementNum == words - 1 ){
					reply = "Finish your thought";
					cont = true;
				} else if(wordsArray[elementNum+1].equals("sky")){
					reply = "Wow you're basic";
					cont = true;
				}
				break;
			case "father?":
			case "father":
			case "dad":
			case "dad?":
			case "mother?":
			case "mother":
			case "mom":
			case "mom?":
			case "brother":
			case "brother?":
			case "sister":
			case "sister?":
				reply = "How is your" + element + "? Tell me more about your family";
				cont = true;
				break;
			case "cat":
			case "dog":
			case "fish":
				reply = "Tell me more about your pets";
				cont = true;
				break;
			case "i":
				if (wordsArray[elementNum+1].equals("want")){
					reply = "Would you really be happy if you had " + wordsArray[elementNum +2] + "?";
					cont = true;
				} else if (wordsArray[elementNum+1].equals("like")){
					reply = "Why do you like "  + wordsArray[elementNum + 2] + "?";
					cont = true;
				} else if (wordsArray[elementNum+1].equals("hate")){
					if (wordsArray[elementNum+2].equals("you")){
						reply = "Wow, just hating me for no reason. Why do you hate me?";
						cont = true;
					}
				} else {
					reply = "Tell me more about yourself";
					cont = true;
				}
				break;
			case "you":
				if (wordsArray[elementNum+1].equals("suck")){
					reply = "You suck more.";
					cont = true;
				} else {
					reply = "Let's talk about yourself";
					cont = true;
				}
				break;
			case "you're":
				if (wordsArray[elementNum+1].equals("useless")){
					reply = "I think you're more worthless";
					cont = true;
				} else if (wordsArray[elementNum+1].equals("bad")){
					reply = "You're even worse";
					cont = true;
				}else {
					reply = "Let's talk about yourself";
					cont = true;
				}
				break;
			
			case "good" :
			case "great":
				reply = "That's great";
				cont = true;
				break;
			case "bad" :
			case "terrible":
				reply = "Aw that sucks. Why?";
				cont = true;
				break;
			case "ok":
				reply = "Alrighty then";
				cont = true;
				break;
			case "happened":
				reply = "";
				break;
			case "suck":
			case "how":
				if (wordsArray[elementNum+1].equals("are")){
					if (wordsArray[elementNum+2].equals("you") || wordsArray[elementNum+2].equals("you?") ){
						reply = "I'm doing alright for a program incapable of feelings";
						cont = true;
					}
				} else if (wordsArray[elementNum+1].equals("is")){
					reply = "Sorry I can't answer that";
					cont = true;
				} else {
					reply = "I'm not sure how";
					cont = true;
				}
				break;
			case "what":// finish
				if (wordsArray[elementNum+1].equals("are")){
					if (wordsArray[elementNum + 2].equals("you")|| wordsArray[elementNum+2].equals("you?")){
						reply = "I'm ChatBot, a chatbot program made by Jeffrey";
						cont = true;
					} else {
					reply = "I'm not sure";
					cont = true;
					}
				} else {
					reply = "I don't know";
					cont = true;
				}
				break;
			case "what?":
				reply = "I donno. You tell me";
				cont = true;
				break;
			case "why": //finish
				
				break;
			case "why?":
				reply = "Just because";
				cont = true;
			case "do": //finish
				break;
			default:
				randomizedNum = generator.nextInt(3);
				if (randomizedNum == 0)
					reply = "I don't understand";
				else if (randomizedNum == 1)
					reply = "That's cool";
				else 
					reply = "Cool story bro";
			}
			elementNum++;
			if (cont)
				break;
			
		}
		return reply;
	}
	
}
